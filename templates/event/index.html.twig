{% extends 'baseback.html.twig' %}

{% block title %}Hello EventController!{% endblock %}

{% block body %}



    {% for event in UserEvents %}

            <div class="container">

            <div class="row">

        <div class="event-display col s10 m10 l8 ">
            <a style="background-image: url({{ asset('image_event/') ~ event.image }})" class="btn waves-effect waves-light event-btn" href="{{ path ('event_edit',{'id':event.id}) }}">
                <div id="event-title" class="event-title {{event.color}} center ">{{ event.name }}</div>
                <div class="inscription-div {{event.color}} right">
                    <br>
                    <i class="inscription-icon material-icons center">assignment</i>
                </div>
                <div id="bottom-color" class="bottom-color {{event.color}} "></div>
            </a>
        </div>
                <div class="col s2 m2 l2 ">
                    <a href="{{ path ('event_edit',{'id':event.id}) }}">Modifier</a>
                </div>
                    <div class="col s2 m2 l2 ">
                    <a href="{{ path ('event_edit',{'id':event.id}) }}">Supprimer</a>
                </div>
            </div>
            </div>


    {% endfor %}
    <div class="container">

    <a href="{{ path ('event_create')}}">Créer un évenement</a>
    </div>
{% endblock %}
