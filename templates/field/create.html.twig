{% extends 'base.html.twig' %}

{% block title %}Hello FieldController!{% endblock %}

{% block body %}
     <div class="container">
<div class="row">
    <div class="col s12 m8 l8">
    {{ form_start(form) }}
    <label for="inputEmail"><h6>Nom</h6></label>
    <div class="grey lighten-1 parallelogramme">
        {{ form_widget(form.name, {'attr': {'class': 'anti-skew'}}) }}
    </div>
    <label for="inputEmail"><h6>Type</h6></label>
    <div class="grey lighten-1 ">
        {{ form_widget(form.type, {'attr': {'class': 'anti-skew'}}) }}
    </div>
        <br>
        {{ form_widget(form.save, {'attr': {'class': 'btn red darken-4'}}) }}
    {{ form_end(form) }}
    </div>
    </div>
     </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function(){
            $('select').formSelect().className = 'anti-skew';
        });
    </script>
{% endblock %}